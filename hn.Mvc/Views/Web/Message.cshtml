@model hn.DataAccess.model.TB_SahowListMessageModel
@{
    Layout = null;
}

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>@Model.FTitle</title>
    <!-- Bootstrap -->
    <link href="~/Css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            font: 16px/28px "Microsoft Yahei", Helvetica, Arial, sans-serif;
            color: #333;
            -moz-background-size: cover;
            -webkit-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        h1, h2, h3, h4, body {
            margin: 0;
            padding: 0;
            font-size: 16px;
            font-weight: normal;
        }

        h1 {
            font-size: 16px;
            line-height: 40px;
            background: #333;
            color: #fff;
            text-align: center;
            margin-bottom: 30px;
        }

        h3 {
            font-size: 24px;
            line-height: 80px;
        }

        h2 {
            line-height: 30px;
        }

        .downloadpage {
            width: 96%;
            max-width: 300px;
            margin: 0 auto;
            text-align: center;
        }

            .downloadpage img {
                width: 100%;
            }

        .head {
            margin-top: 30px;
        }

        a {
            color: #fff;
            padding: 10px;
            background: #333;
            margin-right: 10px;
            text-decoration: none;
            display: inline-block;
        }

        .line {
            width: 100%;
            height: 20px;
            overflow: hidden;
            zoom: 1;
        }

        a:link,
        a:visited,
        a:hover,
        a:active {
            color: #fff;
        }

        .ios span, .and span {
        }

        footer {
            text-align: center;
            font-size: 14px;
            line-height: 40px;
            background: #333;
            color: #fff;
            margin-top: 50px;
        }

        .and, .ios {
            border-top: 1px solid #333;
        }

        #weixin-tip {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            background: rgba(0,0,0,0.8);
            filter: alpha(opacity=80);
            width: 100%;
            height: 100%;
            z-index: 100;
        }

            #weixin-tip p {
                text-align: center;
                margin-top: 10%;
                padding: 0 5%;
                position: relative;
            }

            #weixin-tip .close {
                color: #fff;
                padding: 5px;
                font: bold 20px/20px simsun;
                text-shadow: 0 1px 0 #ddd;
                position: absolute;
                top: 0;
                left: 5%;
            }

        .android-btn {
            border-radius: 8px;
            cursor: pointer;
            text-align: center;
            padding: 10px;
        }

        .btn-xl {
            color: #fff;
            background-color: #D74D31;
            font-weight: 500;
            border-radius: 8px;
            font-size: 16px;
            padding: 10px 10px;
        }

            .btn-xl:hover, .btn-xl:focus, .btn-xl:active, .btn-xl.active {
                color: #fff;
                background-color: #EE6A3F;
            }
    </style>
</head>
<body>
    <h1>@Model.FTitle</h1>
    <div class="downloadpage">
        @Html.Raw(Model.FContent)
    </div>

</body>
</html>