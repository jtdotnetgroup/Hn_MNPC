            //项目
            bindProjectsDialog(top.$('#txtItemName'), function (row) {
                top.$('#txtItemName').searchbox("setValue", row.FName);
                top.$('#txtFItemID').textbox("setValue", row.FID);
            });
            top.$('#txtCustName').textbox('disable', true);

            //客户
