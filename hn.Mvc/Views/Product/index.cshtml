        function createParam(action, FID) {
            var o = {};
            var form = top.$('#uiform');
            var query = '';
            if (form) {
                query = top.$('#uiform').serializeArray();
                query = convertArray(query);
                o.jsonEntity = JSON.stringify(query);
            }
            o.action = action;
            o.FID = FID;
            return "json=" + JSON.stringify(o);
        }

