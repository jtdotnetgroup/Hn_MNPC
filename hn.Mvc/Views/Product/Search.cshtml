@{
    ViewBag.Title = "index";
}
<!-- 引入多功能查询js -->
<script type="text/javascript" src="/Scripts/UI/Linqjs/linq.min.js"></script>
<script type="text/javascript" src="/Scripts/UI/Linqjs/linq.jquery.js"></script>
<script type="text/javascript" src="/Scripts/Business/Goods.js"></script>
<div id="layout">
    <div region="west" iconcls="icon-chart_organisation" split="true" title="商品分类" style="width: 220px;
        padding: 5px" collapsible="false">
        <ul id="deptree">
        </ul>
    </div>
    <div region="center" title="商品列表" iconcls="icon-users" style="padding: 2px; overflow: hidden">
        <div class="datagrid-toolbar" id="toolbar" style="height: 28px; padding-top: 1px;
            padding-right: 2px; padding-bottom: 0px; padding-left: 2px;">
            <a id="a_confirm" style="float: left" href="javascript:;" plain="true" class="easyui-linkbutton"
                icon="icon-add" title="添加">确定</a><div class='datagrid-btn-separator'>
                </div>
            <a id="a_search" style="float: left" href="javascript:;" plain="true" class="easyui-linkbutton"
                icon="icon-search" title="查询">查询</a>
        </div>
        <table id="userGrid" toolbar="#toolbar">
        </table>
    </div>
</div>
<script type="text/javascript">
    var win = new RoadUI.Window();

    $(function () {
        $("#a_confirm").click(function () {
            win.close();
        });
    });
</script>